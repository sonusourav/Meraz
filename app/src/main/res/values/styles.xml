<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="ThinnerChip" parent="Widget.MaterialComponents.Chip.Action">
    <item name="chipCornerRadius">1dp</item>
    <item name="chipMinHeight">15dp</item>
    <item name="android:textAppearance">@style/SmallerText</item>
    <item name="chipStartPadding">0dp</item>
    <item name="chipEndPadding">0dp</item>
    <item name="chipBackgroundColor">@color/colorPrimary</item>
  </style>

  <style name="SmallerText" parent="TextAppearance.AppCompat.Small">
    <item name="android:textSize">12sp</item>
  </style>
</resources>
